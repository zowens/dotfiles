" ---------------------------------------
" Formatting
" ---------------------------------------
" standard vim editing config, 4 space tabs
set hidden
set number
set tabstop=4
set smarttab
set shiftwidth=4
set autoindent
set expandtab

" smart indent
set ai
set si

set spelllang=en_us

syntax on

" UTF-8 always
set encoding=utf-8

" Colors/Fonts
try
    colorscheme gotham
catch /^Vim\%((\a\+)\)\=:E185/
endtry

set background=dark
if $TERM == "xterm"
    set t_Co=256
endif

" https://github.com/powerline/fonts/tree/master/DejaVuSansMono
set guifont=DejaVu\ Sans\ Mono\ for\ Powerline:h14
let g:Powerline_symbols="fancy"

set listchars=
set listchars+=tab:¬∑\
set listchars+=eol:‚Ü≤
set listchars+=trail:‚Ä¢
set listchars+=extends:‚Ä¶
set listchars+=precedes:¬´
set listchars+=nbsp:‚ê£

" exclusively use VIM settings (not VI settings)
set laststatus=2

"allow backspacing
set backspace=indent,eol,start
set whichwrap+=<,>,h,l
set nowrap
set softtabstop=4

